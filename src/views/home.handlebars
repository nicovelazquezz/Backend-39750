<h3 class="font-bold text-2xl p-3 text-center text-gray-700 bg-blue-300">HOME</h3>
<div class="w-full flex justify-center">  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-10" onclick="window.location.href='/realtimeproducts'">Ir a Real Time Products</button></div>
<div class="container mt-20 mx-auto flex flex-wrap justify-center items-center content-start w-2/3 bg-gray-100 h-80vh overflow-auto">

</div>



<script src="/socket.io/socket.io.js"></script>
<script>
        const socket = io()

        const container = document.querySelector('.container')

        socket.on('productos', data => {
            
            let productos = ''
        data.forEach((product) => {
            const { title, category, price, description } = product
            productos += 

                `
                
                <div class="bg-white m-5 border rounded-lg overflow-hidden mx-2 text-center" style="width: 250px; height:150px;">
                    <div class="px-4 py-2">
                    <h3 class="text-lg text-gray-900 bg-blue-200 uppercase font-semibold">${title}</h3>
                    <p class="text-sm font-medium text-gray-500 capitalize">${category}</p>
                    <p class="mt-1 text-sm text-gray-500">${description}</p>
                    <p class="mt-2 text-lg font-medium text-gray-900">$${price}</p>
                    </div>
                </div>
                

                `



        })

        container.innerHTML = productos

    })

</script>
